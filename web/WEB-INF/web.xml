<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <welcome-file-list>
        <welcome-file>jsp/index.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>Handler</servlet-name>
        <servlet-class>main.java.controllers.Handler</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Handler</servlet-name>
        <url-pattern>/payments</url-pattern>
    </servlet-mapping>

    <!--DB Connection begin-->
    <resource-ref>
        <res-ref-name>jdbc/payments</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    <!--DB Connection end-->

    <!--Session config begin-->
    <session-config>
        <session-timeout>10000</session-timeout>
    </session-config>
    <!--Session config end-->

    <!--Filter config begin-->

    <filter>
        <filter-name>CharsetFilter</filter-name>
        <filter-class>main.java.filter.CharsetFilter</filter-class>
        <init-param>
            <param-name>requestEncoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>CharsetFilter</filter-name>
        <url-pattern>/payments</url-pattern>
    </filter-mapping>


    <filter>
        <filter-name>rightsFilter</filter-name>
        <filter-class>main.java.filter.RightsFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>rightsFilter</filter-name>
        <url-pattern>/payments</url-pattern>
    </filter-mapping>

        <filter>
            <filter-name>commandFilter</filter-name>
            <filter-class>main.java.filter.CommandFilter</filter-class>
        </filter>
        <filter-mapping>
            <filter-name>commandFilter</filter-name>
            <url-pattern>/payments</url-pattern>
        </filter-mapping>


        <filter>
            <filter-name>securityFilter</filter-name>
            <filter-class>main.java.filter.SecurityFilter</filter-class>
            <init-param>
                <param-name>INDEX_PATH</param-name>
                <param-value>/payments</param-value>
            </init-param>
        </filter>
        <filter-mapping>
            <filter-name>securityFilter</filter-name>
            <url-pattern>/jsp/*</url-pattern>
        </filter-mapping>

        <!--Filter config end-->
    <!--Tag config begin-->

    <jsp-config>
        <taglib>
            <taglib-uri>numberFormatterTag</taglib-uri>
            <taglib-location>/WEB-INF/tld/numberFormatter.tld</taglib-location>
        </taglib>
    </jsp-config>
    <!--Tag config end-->

    <!--
        <error-page>
            <error-code>500</error-code>
            <location>/resources/jsp/user/errorPage.jsp</location>
        </error-page>


        <error-page>
            <error-code>404</error-code>
            <location>/resources/jsp/user/errorPage.jsp</location>
        </error-page> -->
</web-app>